<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CricInfo</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/ej2/bootstrap4.css")
    @Scripts.Render("~/Scripts/ej2/ej2.min.js")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="nav-link" href="/Dashboard/Dashboard">
            <img src="~/Content/CricInfoLogo.jpg" height="50" width="50" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Dashboard/Dashboard">Dashboard<span class="sr-only">(current)</span></a>
                    </li>
                    @*<li class="nav-item active">Welcome - @User.Identity.Name</li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="/Dashboard/AdminDashboard">
                            <img src="~/Content/UserLoginLogo.jfif" height="40" width="40" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/CreatePlayer">Add Player</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/CreateTeam">Add Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/CreateMatch">Add Matches</a>
                    </li>
                </ul>
                <div class="nav-item">
                    @Html.ActionLink("LogOut", "LogOut", "UserAuthentication", null, new { @class = "btn btn-outline-success" })
                </div>

            }
            else
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Dashboard/Dashboard">Dashboard<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/UserAuthentication/Index">
                            <img src="~/Content/UserLoginLogo.jfif" height="40" width="40" />
                        </a>
                    </li>
                </ul>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="container body-content">
            <hr />
            <p>&copy; @DateTime.Now.Year - CricInfo</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Html.EJS().ScriptManager()
    @RenderSection("scripts", required: false)
</body>
</html>
